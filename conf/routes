# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /list                       controllers.Application.listOfCourses()

# Course
GET     /course/:id                 controllers.Courses.viewCourse(id: String)

# Lecture
GET     /lecture/:id                controllers.Lectures.viewLecture(id: String)

# Study Group
GET     /create/study-group          controllers.StudyGroups.createStudyGroup()
GET		/create/study-group/:course	controllers.StudyGroups.createSgForCourse(course: String)
POST    /create/new/study-group      controllers.StudyGroups.addStudyGroup()
GET     /view/study-group/:course/:id        controllers.StudyGroups.viewStudyGroup(id: Long, course: String)
GET		/view/:course/study-groups	controllers.StudyGroups.listStudyGroups(course: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
